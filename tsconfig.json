      "@theme": ["src/theme"],
      "@screens": ["src/screens"],
      "@domain": ["src/domain"],
      "@assets": ["src/assets"],
      "@api": ["src/api"],
      "@database": ["src/database"],
     "@routes": ["src/routes"],
    }
